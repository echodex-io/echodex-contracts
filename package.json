    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "chai": "^4.3.7",
        "hardhat": "^2.15.0",
        "sol-merger": "^4.4.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.3"
    },
    "dependencies": {
        "@ethersproject/bignumber": "^5.7.0",
        "@nomiclabs/hardhat-ethers": "^2.2.2",
        "@nomiclabs/hardhat-truffle5": "^2.0.7",
        "@nomiclabs/hardhat-web3": "^2.0.0",
        "dotenv": "^16.0.3",
        "hardhat-abi-exporter": "^2.10.1",
        "hardhat-contract-sizer": "^2.8.0",
        "solidity-coverage": "^0.7.22",
        "web3": "^1.10.0"
    }
