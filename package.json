{
    "name": "echodex-contracts",
    "description": "Exchange contracts from Echodex",
    "version": "2.0.0",
    "license": "GPL-3.0/MIT",
    "private": true,
    "scripts": {
        "compile": "npx hardhat compile",
        "deploy:testnet": "npx hardhat run --network testnet scripts/deploy.ts",
